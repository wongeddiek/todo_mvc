<h1>
  <%= "#{@user.firstname} #{@user.lastname}'s" %> Dashboard
  <%= link_to "Edit My Profile", edit_user_registration_path, class: "btn btn-primary" %>
  <% if current_user.is_admin %>
    <%= link_to "Admin Page", admin_path, class: "btn btn-warning" %>
  <% end %>
</h1>

<div class="container">

  <div class="row">
    <div class="col-md-6">
      <h3>
        My Blogs <small><%= link_to "New Blog", new_article_path %></small>
      </h3>
      <ul class="list-group">
        <% @articles.each do |article| %>
            <%= link_to "#{article.title} <em class='pull-right'>created #{time_ago_in_words(article.created_at)} ago</em>".html_safe, article, class: "list-group-item" %>
        <% end %>
      </ul>
    </div>

    <div class="col-md-6">
      <h3>
        My Lists <small><%= link_to "New List", new_list_path %></small>
      </h3>
      <ul class="list-group">
        <% @lists.each do |list| %>
          <%= link_to "#{list.name} <em class='pull-right'>created #{time_ago_in_words(list.created_at)} ago</em>".html_safe, list, class: "list-group-item" %>
        <% end %>
      </ul>
    </div>

  </div>
</div>
